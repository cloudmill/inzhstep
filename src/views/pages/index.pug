extends ../layouts/master.pug

include ../components/_news-card.pug
include ../components/_object-card.pug
include ../components/_partner-card.pug
include ../components/_link.pug
include ../components/_grid-test.pug
include ../components/_nav-card.pug



block header
  include ../partials/_header.pug



block content
  +grid-test
  .top
    .top__background
      img.top__background-img(src='assets/images/top-background.jpg')
    .top__ui
      .top__ui-control
        .top__control
          .top__control-button.top__control-button--left
            svg.top__control-svg(width="20" height="18" viewBox="0 0 20 18" fill="none" xmlns="http://www.w3.org/2000/svg")
              path(fill-rule="evenodd" clip-rule="evenodd" d="M15.5858 9.99999L-3.36888e-07 9.99999L-4.24311e-07 7.99999L15.5858 7.99999L9.29289 1.70709L10.7071 0.292879L19.4142 8.99998L10.7071 17.7071L9.29289 16.2929L15.5858 9.99999Z" fill="#2B3637")
          .top__control-button.top__control-button--right
            svg.top__control-svg(width="20" height="18" viewBox="0 0 20 18" fill="none" xmlns="http://www.w3.org/2000/svg")
              path(fill-rule="evenodd" clip-rule="evenodd" d="M15.5858 9.99999L-3.36888e-07 9.99999L-4.24311e-07 7.99999L15.5858 7.99999L9.29289 1.70709L10.7071 0.292879L19.4142 8.99998L10.7071 17.7071L9.29289 16.2929L15.5858 9.99999Z" fill="#2B3637")
      .top__ui-panel
        .top__down
          svg.top__down-svg(width="20" height="18" viewBox="0 0 20 18" fill="none" xmlns="http://www.w3.org/2000/svg")
            path(fill-rule="evenodd" clip-rule="evenodd" d="M15.5858 9.99999L-3.36888e-07 9.99999L-4.24311e-07 7.99999L15.5858 7.99999L9.29289 1.70709L10.7071 0.292879L19.4142 8.99998L10.7071 17.7071L9.29289 16.2929L15.5858 9.99999Z" fill="#2B3637")
        .top__decor
          .top__decor-text
            |01 — 03
  .section
    .container
      .row
        .row__side
          .section__inner.section__inner--side
            .section__top
              h2.section__title
                |Новости
              .section__buttons
                .slider-buttons
                  .slider-button.slider-button--left
                    .slider-button__button(data-slider-id='1')
                    svg.slider-button__svg(width="20" height="18" viewBox="0 0 20 18" fill="none" xmlns="http://www.w3.org/2000/svg")
                      path(fill-rule="evenodd" clip-rule="evenodd" d="M15.5858 9.99999L-3.36888e-07 9.99999L-4.24311e-07 7.99999L15.5858 7.99999L9.29289 1.70709L10.7071 0.292879L19.4142 8.99998L10.7071 17.7071L9.29289 16.2929L15.5858 9.99999Z" fill="#2B3637")
                  .slider-button.slider-button--right
                    .slider-button__button(data-slider-id='2')
                    svg.slider-button__svg(width="20" height="18" viewBox="0 0 20 18" fill="none" xmlns="http://www.w3.org/2000/svg")
                      path(fill-rule="evenodd" clip-rule="evenodd" d="M15.5858 9.99999L-3.36888e-07 9.99999L-4.24311e-07 7.99999L15.5858 7.99999L9.29289 1.70709L10.7071 0.292879L19.4142 8.99998L10.7071 17.7071L9.29289 16.2929L15.5858 9.99999Z" fill="#2B3637")
            +link
              |все новости
        .row__main
          .section__inner.section__inner--main
            .section__slider
              .slider.slider--news-card(data-slider-prev-id='1' data-slider-next-id='2')
                .slider__swiper
                  .swiper-wrapper
                    - for (let i= 0; i<5; i++)
                      .swiper-slide
                        +news-card
                      .swiper-slide
                        +news-card({
                          image:'news-card-1.jpeg',
                          mark:'НОВИНКА',
                          title:'Новинка! Шаровые краны Altstream PN 25!',
                        })
  .section
    .container
      .row
        .row__side
          .section__inner.section__inner--side
            .section__top
              h2.section__title
                |объекты
              .section__buttons
                .slider-buttons
                  .slider-button.slider-button--left
                    .slider-button__button(data-slider-id='3')
                    svg.slider-button__svg(width="20" height="18" viewBox="0 0 20 18" fill="none" xmlns="http://www.w3.org/2000/svg")
                      path(fill-rule="evenodd" clip-rule="evenodd" d="M15.5858 9.99999L-3.36888e-07 9.99999L-4.24311e-07 7.99999L15.5858 7.99999L9.29289 1.70709L10.7071 0.292879L19.4142 8.99998L10.7071 17.7071L9.29289 16.2929L15.5858 9.99999Z" fill="#2B3637")
                  .slider-button.slider-button--right
                    .slider-button__button(data-slider-id='4')
                    svg.slider-button__svg(width="20" height="18" viewBox="0 0 20 18" fill="none" xmlns="http://www.w3.org/2000/svg")
                      path(fill-rule="evenodd" clip-rule="evenodd" d="M15.5858 9.99999L-3.36888e-07 9.99999L-4.24311e-07 7.99999L15.5858 7.99999L9.29289 1.70709L10.7071 0.292879L19.4142 8.99998L10.7071 17.7071L9.29289 16.2929L15.5858 9.99999Z" fill="#2B3637")
            +link
              |все объекты
        .row__main
          .section__inner.section__inner--main
            .section__slider
              .slider.slider--object-card(data-slider-prev-id='3' data-slider-next-id='4')
                .slider__swiper
                  .swiper-wrapper
                    - for (let i= 0; i<5; i++)
                      .swiper-slide
                        +object-card
                      .swiper-slide
                        +object-card({
                          image:'object-card-1.jpg',
                          imageMark:'object-card-mark-1.jpg',
                        })

  .section.section--partners
    .container
      .row
        .row__side
          .section__inner.section__inner--side
            .section__top
              h2.section__title
                |партнеры
              .section__buttons
                .slider-buttons
                  .slider-button.slider-button--left
                    .slider-button__button(data-slider-id='5')
                    svg.slider-button__svg(width="20" height="18" viewBox="0 0 20 18" fill="none" xmlns="http://www.w3.org/2000/svg")
                      path(fill-rule="evenodd" clip-rule="evenodd" d="M15.5858 9.99999L-3.36888e-07 9.99999L-4.24311e-07 7.99999L15.5858 7.99999L9.29289 1.70709L10.7071 0.292879L19.4142 8.99998L10.7071 17.7071L9.29289 16.2929L15.5858 9.99999Z" fill="#2B3637")
                  .slider-button.slider-button--right
                    .slider-button__button(data-slider-id='6')
                    svg.slider-button__svg(width="20" height="18" viewBox="0 0 20 18" fill="none" xmlns="http://www.w3.org/2000/svg")
                      path(fill-rule="evenodd" clip-rule="evenodd" d="M15.5858 9.99999L-3.36888e-07 9.99999L-4.24311e-07 7.99999L15.5858 7.99999L9.29289 1.70709L10.7071 0.292879L19.4142 8.99998L10.7071 17.7071L9.29289 16.2929L15.5858 9.99999Z" fill="#2B3637")
        .row__main
          .section__inner.section__inner--main
            .section__slider
              .slider.slider--partner-card(data-slider-id='7' data-slider-prev-id='5' data-slider-next-id='6')
                .slider__swiper
                  .swiper-wrapper
                    - for (let i= 0; i<5; i++)
                      .swiper-slide
                        +partner-card
                      .swiper-slide
                        +partner-card({
                          image:'partner-card-1.png',
                        })


block footer
  include ../partials/_footer.pug