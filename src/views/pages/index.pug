extends ../layouts/master.pug

include ../components/_news-card.pug
include ../components/_link.pug

block header
  include ../partials/_header.pug

block content
  main
    +link
      |test
    .slider.slider--news-card
      .slider__swiper
        .swiper-wrapper
          - for (let i= 0; i<5; i++)
            .swiper-slide
              +news-card
            .swiper-slide
              +news-card({
                image:'news-card-1.jpeg',
                mark:'НОВИНКА',
                title:'Новинка! Шаровые краны Altstream PN 25!',
              })

block footer
  include ../partials/_footer.pug
