extends ../layouts/master.pug

include ../partials/_header.pug
include ../partials/_footer.pug

include ../components/_grid-test.pug
include ../components/_catalog-card.pug



block header
  +header({
    mod: 'white',
  })



block content
  //- +grid-test

  .grid
    .grid__section
      .grid__row
        .grid__col
        .grid__col
          .grid__container.grid__container--title
            h1.title
              |Каталог
    .grid__section
      .grid__row
        .grid__col
          .grid__container.grid__container--panel
            ul.panel
              li.panel__item.panel__item--active
                +mark-svg('panel__svg')
                a.panel__link(href='#')
                  |Отопление
              li.panel__item
                +mark-svg('panel__svg')
                a.panel__link(href='#')
                  |Водоснабжение
              li.panel__item
                +mark-svg('panel__svg')
                a.panel__link(href='#')
                  |Приборы учета тепла и воды
              li.panel__item
                +mark-svg('panel__svg')
                a.panel__link(href='#')
                  |Трубопроводная арматура
              li.panel__item
                +mark-svg('panel__svg')
                a.panel__link(href='#')
                  |Теплоизоляционные материалы
              li.panel__item
                +mark-svg('panel__svg')
                a.panel__link(href='#')
                  |Полотенцесущители
              li.panel__item
                +mark-svg('panel__svg')
                a.panel__link(href='#')
                  |Канализация
              li.panel__item
                +mark-svg('panel__svg')
                a.panel__link(href='#')
                  |Продукция марки Valtec
              li.panel__item
                +mark-svg('panel__svg')
                a.panel__link(href='#')
                  |Крепежные изделия
        .grid__col
          .selects.selects--margin-top
            .container
              .selects__item
                .select
                  -
                    var options = [
                      'Отопление',
                      'Водоснабжение',
                      'Приборы учета тепла и воды',
                      'Трубопроводная арматура',
                      'Теплоизоляционные материалы',
                      'Полотенцесущители',
                      'Канализация',
                      'Продукция марки Valtec',
                      'Крепежные изделия',
                    ];
                  .select__panel
                    .select__text
                    +arrow-svg('select__svg')
                  select.select__select(name='select')
                    each option, index in options
                      option.select__option(value=option selected=(index === 0 ? '' : undefined))
                        |#{option}
              .selects__item
                .select
                  -
                    var options = [
                      'Sanline.  Трубы Pex и фитинги для систем внутридомовой разводки отопления',
                      'Sanline. Коллекторные узлы. Балансировочная арматура',
                      'Термостатическая арматура и комплектующие',
                      'Отопительные приборы',
                    ];
                  .select__panel
                    .select__text
                    +arrow-svg('select__svg')
                  select.select__select(name='select')
                    each option, index in options
                      option.select__option(value=option selected=(index === 0 ? '' : undefined))
                        |#{option} 
          .tabs
            .tabs__row
              .tabs__item.tabs__item--active
                a.tabs__link(href='#')
                  |Sanline.  Трубы Pex и фитинги для систем внутридомовой разводки отопления
              .tabs__item
                a.tabs__link(href='#')
                  |Sanline. Коллекторные узлы. Балансировочная арматура
              .tabs__item
                a.tabs__link(href='#')
                  |Термостатическая арматура и комплектующие
              .tabs__item
                a.tabs__link(href='#')
                  |Отопительные приборы
          .grid__container.grid__container--catalog
            .catalog
              - for (let i=0; i<10; i++)
                .catalog__item
                  +catalog-card({
                    responsive: true,
                  })



block footer
  +footer